<div>
    <label for="title">Tittle</label>
    <input type="text" name='title' value="<%= book.title %>">
</div>
<div>
    <label for="title">Author</label>
    <select name="author">
        <% authors.forEach(a=> { %>
            <% if (a.id===book.id) {%>
                <option selected label="<%= a.name %>" value="<%= a.id %>"></option>
                <% } else { %>
                    <option label="<%= a.name %>" value="<%= a.id %>"></option>
                    <% } %>
                        <% })%>
    </select>
</div>
<div>
    <label for="publishDate">Publish Date</label>
    <input type="date" name="publishDate"
        value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0]  %>">
</div>
<div>
    <label for="pageCount">Page Count</label>
    <input type="number" name='pageCount' min=1 value="<%=book.pageCount%>">
</div>
<div>
    <label for="cover">Cover</label>
    <input type="file" name='cover'>
</div>
<div>
    <label for="description">Description</label>
    <textarea name='description'><%= book.description %></textarea>
</div>